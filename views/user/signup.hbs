<div class="col-md-4 offset-md-4" style="padding-top: 70px">
    <h2 style="padding-bottom: 30px;" class="text-center">Sign Up</h2>
    <form action="signup" method="POST">

        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" name="email" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" placeholder="Re-Enter Your Password">
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</div>